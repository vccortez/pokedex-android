<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pokemon_item_thumbnail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/pokemon_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/pokemon_item_thumbnail"
        app:layout_constraintTop_toTopOf="@id/pokemon_item_thumbnail"
        tools:text="Title" />

    <TextView
        android:id="@+id/pokemon_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/pokemon_item_title"
        app:layout_constraintTop_toTopOf="@id/pokemon_item_title"
        tools:text="Number" />

    <TextView
        android:id="@+id/pokemon_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@id/pokemon_item_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_item_title"
        tools:text="Description" />

    <TextView
        android:id="@+id/pokemon_item_detail1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:padding="2dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/pokemon_item_thumbnail"
        app:layout_constraintLeft_toLeftOf="@id/pokemon_item_title"
        app:layout_constraintTop_toBottomOf="@id/pokemon_item_subtitle"
        tools:text="Detail 1" />

    <TextView
        android:id="@+id/pokemon_item_detail2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:maxLines="1"
        android:padding="2dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/pokemon_item_detail1"
        app:layout_constraintTop_toTopOf="@id/pokemon_item_detail1"
        tools:text="Detail 2" />


</android.support.constraint.ConstraintLayout>